---
import Layout from '../layouts/Layout.astro';
import AnimatedLogo from '../components/AnimatedLogo.astro';
import EventCard from '../components/EventCard.astro';
import TeamMember from '../components/TeamMember.astro';
import Partner from '../components/Partner.astro';
import Footer from '../components/Footer.astro';
import ActivityCard from '../components/ActivityCard.astro';
import SponsorshipTier from '../components/SponsorshipTier.astro';
import JoinTeam from '../components/JoinTeam.astro';
const upcomingEvents = [
  {
    title: "BSides Prague",
    date: "April 3-4, 2025",
    logo: "/bsides-prague-logo.png",
    link: "https://bsidesprg.cz",
    description: "Join us at BSides Prague for exciting security challenges and hands-on activities!"
  }
];

const teamMembers = [
  // Add actual team members here
  {
    name: "E Waber",
    company: "ALEF CZ",
    picture: "/team/ew.png",
    linkedIn: "https://www.linkedin.com/in/e-waber-94950b223/"
  },
   {
      name: "Marko Zbirka",
      company: "AI EdgeLabs",
      picture: "/team/mz.png",
      linkedIn: "https://www.linkedin.com/in/marko-zbirka-ba4566b1/"
    },
     {
        name: "Danny Henderson Jr.",
        company: "Novartis",
        picture: "/team/dh.png",
        linkedIn: "https://www.linkedin.com/in/danny-henderson-jr-77970192/"
      },
    {
        name: "Vlad Iliushin",
        company: "ELLIO",
        picture: "/team/vi.png",
        linkedIn: "https://www.linkedin.com/in/iliushin/"
      },


];

const partners = [
  // Add actual partners here
  {
    logo: "/partners/ELLIO_logo.png",
    logoDark: "/partners/ELLIO_logo_white.png",
    link: "https://ellio.tech"
  },
  {
      logo: "/partners/noibit-logo.jpg",
      logoDark: "/partners/noibit-logo_white.png",
      link: "https://noibit.com"
    }
];

const activities = [
  {
    title: "Hackers Jeopardy",
    description: "\"Hackers Answer In The Form Of A Question\" - A competitive activity that encourages learning and showcases the range of participants' expertise."
  },
  {
    title: "Lockpicking Fence",
    description: "A literal wall with a variety of locks. Your mission: help clear the fence by the end of the conference. Test your skills against different lock types and difficulties."
  },
  {
    title: "Ethernet Master",
    description: "A cable crimping contest offering hands-on experience. Everyone can participate - unless it's CAT8! Put your technical skills to the test in this time-based challenge."
  }
];
---

<Layout title="LocalHost Village - BSides Prague">
  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <AnimatedLogo />
      </div>
    </section>

    <!-- Next Events Section -->
    <section class="events">
      <div class="container">
        <h2>Upcoming Events</h2>
        <div class="events-grid">
          {upcomingEvents.map(event => (
            <EventCard {...event} />
          ))}
        </div>
      </div>
    </section>

    <!-- Activities Section -->
    <section class="activities">
      <div class="container">
        <h2>Our Activities</h2>
        <div class="activities-grid">
          {activities.map(activity => (
            <ActivityCard {...activity} />
          ))}
        </div>
      </div>
    </section>



    <!-- Partners Section -->
    <section class="partners">
      <div class="container">
        <h2>Our Partners</h2>
        <div class="partners-grid">
          {partners.map(partner => (
            <Partner {...partner} />
          ))}
        </div>
      </div>
    </section>


<section class="sponsorship">
  <div class="container">
    <h2>Call for Sponsors</h2>
    <p class="section-intro">Help us bring exciting security challenges and hands-on activities to the community</p>

    <div class="sponsorship-grid">
      <SponsorshipTier
        title="Tier I"
        description="Brand one of our signature activities and get maximum visibility at BSides Prague"
        benefits={[
          "Brand one activity",
          "Logo placement on all village materials",
          "Logo placement on village website",
          "Logo placement on BSides Prague website",
          "Logo placement on village at the event",
          "Special mention during the event",
          "Promotional space at the event",
          "Free tickets to the event for the booth staff",
          "1 invite to the BSides Prague Speaker Dinner",
          "Provide branded swag and giveaways",
        ]}
        color="blue"
      />
      <SponsorshipTier
        title="Tier II"
        description="Support our participation at BSides Prague and help make it happen"
        benefits={[
          "Logo placement on all village materials",
          "Logo placement on village website",
          "Logo placement on BSides Prague website",
          "Logo placement on village at the event",
          "Promotional space at the event",
          "Free tickets to the event for the booth staff",
          "Provide branded swag and giveaways",
        ]}
        color="pink"
      />
    </div>
  </div>
</section>




    <!-- Volunteer Section -->

<section class="join-team">
  <div class="container">
    <h2>Join Our Team</h2>
         <JoinTeam />
    </div>
    </section>


    <!-- Team Section -->
    <section class="team">
      <div class="container">
        <h2>Meet Our Team</h2>
        <div class="team-grid">
          {teamMembers.map(member => (
            <TeamMember {...member} />
          ))}
        </div>
        <div class="team-footer" > + 4 (yet) anonymous members </div>
      </div>
    </section>


    <Footer />
  </main>
</Layout>

<style>
  section {
    padding: var(--spacing-lg) 0;
    position: relative;
  }

  h2 {
    text-align: center;
    color: var(--header-color);
    margin-bottom: var(--spacing-lg);
    font-size: 2.5rem;
  }

  /* Make headers visible in dark mode */
  :global([data-theme="dark"]) h2 {
    color: var(--pink);
  }

  .events-grid,
  .activities-grid,
  .team-grid,
  .partners-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-md);
    padding: 0 var(--spacing-sm);
  }

  .sponsorship {
    padding: var(--spacing-lg) 0;
    background: linear-gradient(to bottom, rgba(255,255,255,0.9), rgba(250,250,250,0.9));
  }

  :global([data-theme="dark"]) .sponsorship {
    background: linear-gradient(to bottom,
      rgba(42, 47, 70, 0.9),
      rgba(26, 31, 54, 0.9)
    );
  }

  .section-intro {
    text-align: center;
    max-width: 600px;
    margin: 0 auto var(--spacing-lg);
    color: var(--text);
    font-size: 1.2rem;
    line-height: 1.6;
  }

  :global([data-theme="dark"]) .section-intro {
    color: #ffffff !important;
  }

  .sponsorship-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-lg);
    padding: 0 var(--spacing-md);
    max-width: 1000px;
    margin: 0 auto;
  }

  .hero {
    min-height: 30vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    margin-top: 32px;
  }

  .volunteer-grid {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .role-types {
    background: white;
    border-radius: var(--border-radius);
    padding: var(--spacing-lg);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  :global([data-theme="dark"]) .role-types {
    background: var(--card-bg);
    box-shadow: 0 4px 6px var(--shadow-color);
  }

  .role-types h3 {
    color: var(--pink);
    margin-bottom: var(--spacing-md);
  }

  .role-types ul {
    list-style: none;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-sm);
  }

  .role-types li {
    padding: var(--spacing-sm);
    background: rgba(247, 37, 133, 0.1);
    border-radius: var(--border-radius);
    transition: transform 0.3s ease;
  }

  :global([data-theme="dark"]) .role-types li {
    background: rgba(247, 37, 133, 0.2);
    color: #ffffff;
  }

  .role-types li:hover {
    transform: translateY(-2px);
  }

  .cta-container {
    margin-top: var(--spacing-lg);
    text-align: center;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background: var(--pink);
    color: white;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(247, 37, 133, 0.3);
  }

  :global([data-theme="dark"]) .btn-primary:hover {
    box-shadow: 0 4px 12px rgba(247, 37, 133, 0.5);
  }

  .arrow {
    transition: transform 0.3s ease;
  }

  .btn:hover .arrow {
    transform: translateX(5px);
  }

  .team-footer {
    text-align: center;
    margin-top: var(--spacing-md);
    font-size: 1.5rem;
    color: var(--header-color);
  }

  :global([data-theme="dark"]) .team-footer {
    color: var(--pink);
  }

  @media (max-width: 768px) {
    .events-grid,
    .activities-grid,
    .team-grid,
    .partners-grid {
      grid-template-columns: 1fr;
      padding: 0 var(--spacing-md);
    }

    h2 {
      font-size: 2rem;
    }

    .role-types ul {
      grid-template-columns: 1fr;
    }

    .sponsorship-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }
  }

  .events {
    padding: var(--spacing-lg) 0;
  }

  .events .container {
    max-width: 800px;
  }

  .events-grid {
    display: grid;
    gap: var(--spacing-md);
  }

  @media (max-width: 640px) {
    .events {
      padding: var(--spacing-md) var(--spacing-sm);
    }
  }
</style>