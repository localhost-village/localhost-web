    text-align: center;
    color: var(--header-color);
    margin-bottom: var(--spacing-lg);
    font-size: 2.5rem;
  }

  /* Make headers visible in dark mode */
  :global([data-theme="dark"]) h2 {
    color: var(--pink);
  }

  .events-grid,
  .activities-grid,
  .partners-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-md);
    padding: 0 var(--spacing-sm);
