<style>
  section {
    padding: var(--spacing-lg) 0;
    position: relative;
  }

  h2 {
    text-align: center;
    color: var(--header-color);
    margin-bottom: var(--spacing-lg);
    font-size: 2.5rem;
  }

  /* Make headers visible in dark mode */
  :global([data-theme="dark"]) h2 {
    color: var(--pink);
  }

  .events-grid,
  .activities-grid,
  .team-grid,
  .partners-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-md);
    padding: 0 var(--spacing-sm);
  }

  .sponsorship {
    padding: var(--spacing-lg) 0;
    background: linear-gradient(to bottom, rgba(255,255,255,0.9), rgba(250,250,250,0.9));
  }

  :global([data-theme="dark"]) .sponsorship {
    background: linear-gradient(to bottom,
      rgba(42, 47, 70, 0.9),
      rgba(26, 31, 54, 0.9)
    );
  }

  .section-intro {
    text-align: center;
    max-width: 600px;
    margin: 0 auto var(--spacing-lg);
    color: var(--text);
    font-size: 1.2rem;
    line-height: 1.6;
  }

  :global([data-theme="dark"]) .section-intro {
    color: #ffffff !important;
  }

  .sponsorship-grid {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      margin: -1rem;
      max-width: 1200px;
      margin: 0 auto;
    }


  .hero {
    min-height: 30vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    margin-top: 32px;
  }

  .volunteer-grid {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .role-types {
    background: white;
    border-radius: var(--border-radius);
    padding: var(--spacing-lg);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  :global([data-theme="dark"]) .role-types {
    background: var(--card-bg);
    box-shadow: 0 4px 6px var(--shadow-color);
  }

  .role-types h3 {
    color: var(--pink);
    margin-bottom: var(--spacing-md);
  }

  .role-types ul {
    list-style: none;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-sm);
  }

  .role-types li {
    padding: var(--spacing-sm);
    background: rgba(247, 37, 133, 0.1);
    border-radius: var(--border-radius);
    transition: transform 0.3s ease;
  }

  :global([data-theme="dark"]) .role-types li {
    background: rgba(247, 37, 133, 0.2);
    color: #ffffff;
  }

  .role-types li:hover {
    transform: translateY(-2px);
  }

  .cta-container {
    margin-top: var(--spacing-lg);
    text-align: center;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background: var(--pink);
    color: white;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(247, 37, 133, 0.3);
  }

  :global([data-theme="dark"]) .btn-primary:hover {
    box-shadow: 0 4px 12px rgba(247, 37, 133, 0.5);
  }

  .arrow {
    transition: transform 0.3s ease;
  }

  .btn:hover .arrow {
    transform: translateX(5px);
  }

  .team-footer {
    text-align: center;
    margin-top: var(--spacing-md);
    font-size: 1.5rem;
    color: var(--header-color);
  }

  :global([data-theme="dark"]) .team-footer {
    color: var(--pink);
  }

  @media (max-width: 768px) {
    .events-grid,
    .activities-grid,
    .team-grid,
    .partners-grid {
      grid-template-columns: 1fr;
      padding: 0 var(--spacing-md);
    }

    h2 {
      font-size: 2rem;
    }

    .role-types ul {
      grid-template-columns: 1fr;
    }

    .sponsorship-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }
  }

  .events {
    padding: var(--spacing-lg) 0;
  }

  .events .container {
    max-width: 800px;
  }

  .events-grid {
    display: grid;
    gap: var(--spacing-md);
  }

  @media (max-width: 640px) {
    .events {
      padding: var(--spacing-md) var(--spacing-sm);
    }
  }
</style>
