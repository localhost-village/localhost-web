---
interface Props {
  name: string;
  logo: string;
  logoDark?: string; // Optional dark mode logo
  link: string;
}

const { name, logo, logoDark, link } = Astro.props;
---

<a href={link} target="_blank" class="partner">
  <img src={logo} alt={`${name} logo`} class="logo-light" />
  {logoDark && <img src={logoDark} alt={`${name} logo`} class="logo-dark" />}
</a>

<style>
  .partner {
    background: white;
    border-radius: var(--border-radius);
    padding: var(--spacing-md);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  :global([data-theme="dark"]) .partner {
    background: var(--card-bg);
    box-shadow: 0 4px 6px var(--shadow-color);
  }

  .partner:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  :global([data-theme="dark"]) .partner:hover {
    box-shadow: 0 6px 12px var(--shadow-color-hover);
  }

  img {
    max-width: 200px;
    max-height: 100px;
    object-fit: contain;
    transition: all 0.3s ease;
  }

  .logo-dark {
    display: none;
  }

  :global([data-theme="dark"]) .logo-light {
    display: none;
  }

  :global([data-theme="dark"]) .logo-dark {
    display: block;
  }


</style>