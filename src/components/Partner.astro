---
interface Props {
  name: string;
  logo: string;
  logoDark?: string; // Optional dark mode logo
  link: string;
}

const { name, logo, logoDark, link } = Astro.props;
---

<a href={link} target="_blank" class="partner">
  <img src={logo} alt={`${name} logo`} class="logo-light" />
  {logoDark && <img src={logoDark} alt={`${name} logo`} class="logo-dark" />}
</a>

<style>
  .partner {
    background: white;
    border-radius: var(--border-radius);
    padding: var(--spacing-md);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    width: 100%;
    height: 150px; /* Fixed height for consistency */
  }

  :global([data-theme="dark"]) .partner {
    background: var(--card-bg);
    box-shadow: 0 4px 6px var(--shadow-color);
  }

  .partner:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  :global([data-theme="dark"]) .partner:hover {
    box-shadow: 0 6px 12px var(--shadow-color-hover);
  }

  img {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
    transition: all 0.3s ease;
    padding: 1rem;
  }

  .logo-dark {
    display: none;
  }

  :global([data-theme="dark"]) .logo-light {
    display: none;
  }

  :global([data-theme="dark"]) .logo-dark {
    display: block;
  }

  /* Responsive breakpoints */
  @media (max-width: 1200px) {
    .partner {
      height: 130px;
    }
  }

  @media (max-width: 768px) {
    .partner {
      height: 120px;
      padding: var(--spacing-sm);
    }
  }

  @media (max-width: 480px) {
    .partner {
      height: 100px;
    }

    img {
      padding: 0.5rem;
    }
  }
</style>