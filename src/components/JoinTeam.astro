    transform: translateY(-5px);
    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
  }

  :global([data-theme="dark"]) .role-card:hover {
    box-shadow: 0 8px 12px var(--shadow-color-hover);
  }

  .role-icon {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-sm);
  }

  .role-card h3 {
